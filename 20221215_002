#include <stdio.h>

int main(int argc, char const *argv[])
{
    float n1, n2, n3, n4, media;
    printf("Digite sua nota 1: ");
    scanf("%f", &n1);
    printf("Digite sua nota 2: ");
    scanf("%f", &n2);

    printf("Digite sua nota 3: ");
    scanf("%f", &n3);
    printf("Digite sua nota 4: ");
    scanf("%f", &n4);
    media = (n1 + n2 + n3 + n4)/4;

    printf("Sua media e %.2f", media);
    return 0;
}
