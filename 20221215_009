#include <stdio.h>

int main()
{
    int n1, n2, res;
    float n3, res2, res3;

    printf("Digite um numero inteiro: ");
    scanf("%i", &n1);
    printf("Digite um numero inteiro: ");
    scanf("%i", &n2);
    printf("Digite um numero real: ");
    scanf("%f", &n3);

    res = n2/2 * n1 * 2;
    res2 = 3 * n1 + n3;
    res3 = n3 * n3 * n3;

    printf("O produto do dobro do primeiro com metade do segundo: %i \n", res);
    printf("A soma do triplo do primeiro com o segundo: %.2f \n", res2);
    printf("O cubo do terceiro: %.2f", res3);
    return 0;
}
